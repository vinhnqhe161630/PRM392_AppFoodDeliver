<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF" /> <!-- Màu nền của TextView -->
    <stroke android:width="2dp" android:color="#000000" /> <!-- Viền đen -->
    <corners android:radius="8dp" /> <!-- Tùy chọn: Bo góc viền -->
    <gradient
        android:angle="45"
        android:endColor="#FFD700"
        android:startColor="#FFE4B5" />
    <corners android:radius="15dp" />
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
</shape>

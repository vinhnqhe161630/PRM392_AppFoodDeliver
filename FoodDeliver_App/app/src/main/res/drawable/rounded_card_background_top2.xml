<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient màu bạc để tạo độ nổi bật vừa phải -->
            <gradient
                android:startColor="#C0C0C0"
            android:endColor="#F8F8F8"
            android:angle="45" />
            <corners android:radius="12dp" /> <!-- Góc bo tròn nhẹ nhàng hơn -->
            <stroke
                android:width="1.5dp"
                android:color="#B0B0B0" />  <!-- Đường viền xám để làm rõ cạnh -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#66C0C0C0" /> <!-- Hiệu ứng ánh sáng nhẹ hơn top 1 -->
        </shape>
    </item>
</layer-list>

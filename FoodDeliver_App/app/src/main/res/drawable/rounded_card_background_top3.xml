<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient màu đồng nhẹ -->
            <gradient
                android:startColor="#CD7F32"
            android:endColor="#E0CDA9"
            android:angle="45" />
            <corners android:radius="10dp" /> <!-- Góc bo tròn nhẹ hơn nữa -->
            <stroke
                android:width="1dp"
                android:color="#A67B5B" />  <!-- Đường viền đồng nhạt -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#66CD7F32" /> <!-- Ánh sáng nhẹ nhàng cho màu đồng -->
        </shape>
    </item>
</layer-list>

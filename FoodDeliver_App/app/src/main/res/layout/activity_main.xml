<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:id="@+id/main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="17dp"
            app:cardElevation="10dp"
            >

            <ImageView
                android:id="@+id/profile_picture_image_view"
                android:padding="1dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                />


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textStyle="bold"
                android:textColor="#424141"
                android:text="Hello there,"
                android:textSize="12dp"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <TextView
                android:id="@+id/name"
                android:paddingRight="10dp"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading.."
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/logout"
                android:orientation="horizontal">





                <ImageView
                    android:id="@+id/logout"
                    android:src="@drawable/baseline_logout_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:text="Logout"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.541"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name21">

                </ImageView>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/name21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="19dp"
                    android:gravity="center"
                    android:text="Loading..."
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>



        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:id="@+id/search_layout"
                    android:layout_below="@id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:queryHint="Search here..."
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#000000"
                        android:background="#9FE8E8E8"   />

                    <ImageView
                        android:id="@+id/filterIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_filter_alt_24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>





        </RelativeLayout>



    <ScrollView
        android:layout_marginBottom="50sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




            <LinearLayout
                android:id="@+id/payment_layout"
                android:layout_marginBottom="50dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/go_back"
                        android:text="  Go Back  "
                        android:layout_marginBottom="20sp"
                       android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="#00897B"
                        android:text="Seller: Appmelodies"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </TextView>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.5"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:progressTint="@android:color/holo_orange_light"
                        android:progressBackgroundTint="@android:color/darker_gray"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/new_name_tv"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:text="Quiz App with multiple questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <ImageView
                    android:id="@+id/new_iv"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/banner_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ImageView>


                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="10sp"
                    android:text="Features:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/new_info_tv"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="10sp"
                    android:text="Modern ui/ux, Admin pannel, Navigation, List unlimited products, easy to use dashboard and ore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/new_price_tv"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textSize="30sp"
                    android:layout_marginLeft="20sp"
                    android:text="199$"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <Button
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"                    android:textColor="@color/white"
                    android:text="Add to Cart"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_corner_bg_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>
                <Button
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Buy Now"
                    android:background="@drawable/rounded_corner_bg_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>

            </LinearLayout>




<LinearLayout
    android:id="@+id/home_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">





    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        >



        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
            android:id="@+id/banner_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#7A7979"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:padding="1dp"
            android:scaleType="centerCrop" />

        </com.facebook.shimmer.ShimmerFrameLayout>



    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <HorizontalScrollView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/brandContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textColor="@color/black"
                        android:text="Games"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="30dp">



                        <ImageView
                            android:padding="0dp"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/games"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textColor="@color/black"
                        android:text="Templates"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="30dp">



                        <ImageView
                            android:padding="0dp"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/templates"
                            android:scaleType="fitCenter" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>




                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textColor="@color/black"
                        android:text="UI/UX"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="30dp">



                        <ImageView
                            android:padding="0dp"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ui"
                            android:scaleType="fitCenter" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textColor="@color/black"
                        android:text="Connectivity"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="30dp">



                        <ImageView
                            android:padding="0dp"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/connectivity"
                            android:scaleType="fitCenter" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textColor="@color/black"
                        android:text="Audio"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="30dp">



                        <ImageView
                            android:padding="0dp"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/audio"
                            android:scaleType="fitCenter" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textColor="@color/black"
                        android:text="Network"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="30dp">



                        <ImageView
                            android:padding="0dp"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/network"
                            android:scaleType="fitCenter" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textColor="@color/black"
                        android:text="Utilities"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="30dp">



                        <ImageView
                            android:padding="0dp"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/elements"
                            android:scaleType="fitCenter" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>





            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Popular Projects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="See All"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">
            </TextView>

        </RelativeLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/productRecyclerView2"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp" />




    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPopularBrands"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Latest Projects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/textViewSeeAll"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="See All"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">
            </TextView>

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/productRecyclerView3"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp" />


    </LinearLayout>




</LinearLayout>





    </LinearLayout>




    </ScrollView>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="@color/white"
        app:itemIconTint="#8E8D8D"
        app:itemTextColor="#020202"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu" />


</RelativeLayout>
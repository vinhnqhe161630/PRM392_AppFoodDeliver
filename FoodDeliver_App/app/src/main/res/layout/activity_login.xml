<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="180sp"
            android:layout_marginRight="60sp"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-10sp"
            android:text="Login"
            android:textColor="#715CF8"
            android:textSize="45sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Sign in to Continue"
            android:textColor="#715CF8"
            android:textSize="18sp">

        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="50dp"
            android:letterSpacing="0.02"
            android:text="Please enter Email"
            android:textAlignment="textStart"
            android:textColor="#545454"
            android:textSize="10dp">

        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_corner_bg">


            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="appmelodies@mail.com"
                android:textColor="#545454"
                android:textSize="16sp">

            </EditText>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="50dp"
            android:letterSpacing="0.02"
            android:text="Please enter your password"
            android:textAlignment="textStart"
            android:textColor="#545454"
            android:textSize="10dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_corner_bg">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="***********"
                android:inputType="textPassword"
                android:textColor="#545454"
                android:textSize="16sp">

            </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remember Me"
                android:textColor="#6E6D6D">

            </RadioButton>

            <TextView
                android:id="@+id/forgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Forgot Password?"
                android:textAlignment="textEnd">

            </TextView>

        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="80sp"
            android:background="@drawable/rounded_corner_bg_button"
            android:letterSpacing="0.1"
            android:text="       LOGIN       "
            android:textColor="@color/white"
            android:textSize="17sp">

        </Button>


        <Button
            android:id="@+id/rgbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:text="dont have an account? sign up now"
            android:textColor="#9989FD" />


    </LinearLayout>


</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                android:textAlignment="center"
                android:text="Welcome, Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>





            <LinearLayout
                android:layout_marginTop="30sp"
                android:orientation="horizontal"
                android:layout_marginBottom="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="Total Sales: 77"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="Pending Orders:19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>





            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Your banner"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer_admin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="MissingClass">

                <ImageView
                    android:id="@+id/imageView_banner"
                    android:layout_gravity="center"
                    android:background="#AAAAAA"
                    android:layout_margin="10sp"
                    android:layout_width="145dp"
                    android:layout_height="90dp">
                </ImageView>

                    </com.facebook.shimmer.ShimmerFrameLayout>


                    <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                >


            <TextView
                android:padding="5dp"
                android:id="@+id/uploadImageButton"
                android:background="@drawable/rounded_corner_bg_button"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="  Click to Upload or Change Banner  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            </androidx.cardview.widget.CardView>







            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                >



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">





                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="List new product"
                        android:textAlignment="center"
                        android:layout_width="match_parent"                        android:layout_height="wrap_content">
                    </TextView>



                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">




                        <ImageView
                            android:id="@+id/productImageView"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/baseline_image_24" />

                    </LinearLayout>




                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">




                        <EditText
                            android:id="@+id/productNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Name" />


                        <EditText
                            android:id="@+id/productInfoEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Features" />





                        <EditText
                            android:id="@+id/productPriceEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Price" />




                    </LinearLayout>




                </LinearLayout>

                    <Button
                        android:id="@+id/submitButton"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_corner_bg_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPopularBrands"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="      All Listings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/textViewSeeAll"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="See All"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">
                </TextView>

            </RelativeLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/productRecyclerView"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/llll"
                android:layout_margin="30dp"
                android:text="View Home Page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Button>

            

        </LinearLayout>

    </ScrollView>
</LinearLayout>

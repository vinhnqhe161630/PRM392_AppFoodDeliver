<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Thêm quyền truy cập Internet ở đây -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodDelivery_App"
        tools:targetApi="31">

        <activity
            android:name=".view.Order.OrderListActivity"
            android:exported="false" />
        <activity
            android:name=".view.Order.CartActivity"
            android:exported="false" />
        <activity
            android:name=".view.MainActivity"

            android:exported="false" />
        <activity
            android:name=".view.Auth.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".view.Auth.ChangePassActivity"
            android:exported="true" />
        <activity
            android:name=".view.Auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.Auth.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".view.Shop.ShopVotedActivity"
            android:exported="true" />
        <activity
            android:name=".view.ShopActivity"
            android:exported="true" />
        <activity
            android:name=".view.FoodDetailActivity"
            android:exported="true" />
    </application>

</manifest>